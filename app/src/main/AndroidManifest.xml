<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.r_edu_kt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".account_recovery" />
        <activity android:name=".CommentReply" />
        <activity android:name=".discussion_home" />
        <activity android:name=".AskQuestionActivity" />
        <activity android:name=".User.Quiz.WonActivity" />
        <activity android:name=".User.Quiz.QuizDashboard" />
        <activity android:name=".User.Quiz.QuizIntro" />
        <activity android:name=".User.MyAccount.MyAccountPhone" />
        <activity android:name=".User.MyAccount.MyAccountEmail" />
        <activity android:name=".User.MyAccount.MyAccountPassword" />
        <activity android:name=".User.MyAccount.MyAccountGender" />
        <activity android:name=".User.MyAccount.MyAccountBirthday" />
        <activity android:name=".User.MyAccount.MyAccountName" />
        <activity android:name=".User.MyAccount.MyAccount" />
        <activity
            android:name=".User.CourseLayout.CourseOverview"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity android:name=".User.ForgetPassword.ForgetSuccessMessage" />
        <activity android:name=".User.ForgetPassword.PasswordOTP" />
        <activity android:name=".User.ForgetPassword.SetNewPassword" />
        <activity android:name=".User.ForgetPassword.MakeSelection" />
        <activity android:name=".User.ForgetPassword.ForgetPassword" />
        <activity android:name=".User.Register.SignUp3rdClass" />
        <activity android:name=".User.Register.SignUp2ndClass" />
        <activity android:name=".User.UserDashboard" />
        <activity android:name=".Common.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CommentsActivity"
            android:parentActivityName=".Common.SplashScreen" />
        <activity
            android:name=".User.Register.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".User.Login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:directBootAware="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>