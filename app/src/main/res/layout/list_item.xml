<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/video_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_marginTop="6dp"
        android:padding="4dp"
        android:src="@drawable/baseline_play_circle_filled_black_48"
        android:tint="@color/colorAccent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/video_icon"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:padding="2dp"
            android:text="Introduction Videosdfsdfasdfasdfsdfsdfasdfasdfsdfsdfsdf"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/darkTextColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Video - 01:40mins"
            android:textSize="10sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/completed_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:padding="4dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/password_updated"
        android:tint="#43A047" />


</RelativeLayout>