<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quiz_blue"
    tools:context=".User.Quiz.WonActivity">

    <RelativeLayout
        android:id="@+id/won_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/quiz_blue">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:src="@drawable/outline_chevron_left_black_48"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/quiz_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/roboto_medium"
            android:padding="5dp"
            android:text="Exit"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r12"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_below="@id/won_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <com.mikhaellopez.circularprogressbar.CircularProgressBar
            android:id="@+id/quiz_circularProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cpb_background_progressbar_color="@color/red"
            app:cpb_background_progressbar_width="10dp"
            app:cpb_progress_direction="to_right"
            app:cpb_progress_max="10"
            app:cpb_progressbar_color="@color/green"
            app:cpb_progressbar_width="10dp"
            app:cpb_round_border="false" />

        <TextView
            android:id="@+id/quiz_result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="5/10"
            android:textColor="@color/white"
            android:textSize="22sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="20dp"
        android:gravity="center"
        android:layout_below="@id/r12">

        <TextView
            android:id="@+id/quiz_bottom_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Compsdfsdfasdfasdfsdf  asdf  asdf   adsf leted"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/white"/>

    </RelativeLayout>


</RelativeLayout>